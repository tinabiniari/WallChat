<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_below="@+id/receiver_message_text"

        android:layout_marginLeft="20dp"
        android:padding="5dp"

        android:text="Name" />


    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/receiver_messages_layout"
        android:padding="12dp"
        android:text="Receiver messages "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receiver_date"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sender_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/receiver_message_text"
        android:layout_marginLeft="-482dp"
        android:layout_toRightOf="@+id/sender_name"
        android:text="Date" />


    <TextView
        android:id="@+id/sender_messsage_text"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/sender_messages_layout"
        android:padding="12dp"
        android:text="Sender messages "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sender_messsage_text"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@+id/receiver_date"
        android:text="Time" />

    <TextView
        android:id="@+id/sender_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/receiver_date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="senderTime" />

</RelativeLayout>