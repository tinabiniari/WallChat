<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/simple"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/start_chat"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/wallchat_text"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_input"
                android:src="@drawable/ic_iconfinder_chat_1214955" />

            <ImageButton
                android:id="@+id/logout_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/settings_btn"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="40dp"

                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_input"
                android:src="@drawable/ic_iconfinder_cross" />

            <TextView
                android:id="@+id/wallchat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_text"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:text="WallChat"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/wallchat_text"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="80dp"
                android:layout_toRightOf="@+id/start_chat"
                android:background="@drawable/rounded_input"
                android:src="@drawable/ic_iconfinder_settings" />

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="50dp"
                android:text="Welcome to"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>